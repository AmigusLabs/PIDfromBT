<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.oprobots.robotaleh.pidfrombt.PIDManager">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="#c0ca33"
        android:padding="5dp">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c0ca33"

            android:padding="5dp"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/consola"
                android:layout_width="match_parent"


                android:background="#424242"
                android:gravity="bottom|start"
                android:padding="5dp"
                android:text=""
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_height="match_parent" />
        </android.support.v4.widget.NestedScrollView>


        <CheckBox
            android:id="@+id/autoScroll"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#c0ca33"
            android:background="#c0ca33"
            android:padding="2dp"
            android:layout_height="35dp"
            android:text="Autoscroll"
            android:checked="true"/>

        <ImageButton
            android:id="@+id/back"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_navigate_before_black_48dp"
            android:backgroundTint="#c0ca33"
            android:background="#c0ca33"/>
        <ImageButton
            android:id="@+id/next"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/back"
            android:scaleType="fitXY"
            android:src="@drawable/ic_navigate_next_black_48dp"
            android:backgroundTint="#c0ca33"
            android:background="#c0ca33"/>
        <ImageButton
            android:id="@+id/clearLog"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/next"
            android:scaleType="fitXY"
            android:src="@drawable/ic_delete_black_48dp"
            android:backgroundTint="#c0ca33"
            android:background="#c0ca33"/>

    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#e2f7c9">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.oprobots.alexsantos.pidfrombt.PIDManager">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I"
                    android:textColor="#c628c3"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="deal"
                    android:textColor="#ef50e4"
                    android:textSize="25sp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <CheckBox
                    android:id="@+id/logicaNegativa"
                    android:layout_width="wrap_content"
                    android:padding="2dp"
                    android:text="Lógica Negativa"
                    android:checked="false"
                    android:layout_height="match_parent"
                    android:/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/idealVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center_horizontal"/>
                <SeekBar
                    android:id="@+id/ideal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:progress="500"
                    android:max="1000"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P"
                    android:textColor="#c62828"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="roporcional"
                    android:textColor="#ef5350"
                    android:textSize="25sp" />

                <!-- <CheckBox
                     android:id="@+id/logicaNegativa"
                     android:layout_width="wrap_content"
                     android:layout_marginLeft="25dp"
                     android:padding="2dp"
                     android:text="Lógica Negativa"
                     android:checked="false"
                     android:layout_height="match_parent" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/numP"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:inputType="numberDecimal"
                    android:text="0.0"
                    android:textAlignment="center"
                    android:textColor="#e57373"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/upupP"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_arrow_upward_black_48dp"
                            android:onClick="onChangeButton"  />

                        <ImageButton
                            android:id="@+id/upP"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_keyboard_arrow_up_black_48dp"
                            android:onClick="onChangeButton"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/downdownP"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_arrow_downward_black_48dp"
                            android:onClick="onChangeButton"  />

                        <ImageButton
                            android:id="@+id/downP"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_keyboard_arrow_down_black_48dp"
                            android:onClick="onChangeButton" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I"
                    android:textColor="#00c853"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ntegral"
                    android:textColor="#81c784"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/numI"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:inputType="numberDecimal"
                    android:text="0.0"
                    android:textAlignment="center"
                    android:textColor="#81c784"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/upupI"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_arrow_upward_black_48dp"
                            android:onClick="onChangeButton"  />

                        <ImageButton
                            android:id="@+id/upI"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_keyboard_arrow_up_black_48dp"
                            android:onClick="onChangeButton"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/downdownI"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_arrow_downward_black_48dp"
                            android:onClick="onChangeButton" />

                        <ImageButton
                            android:id="@+id/downI"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_keyboard_arrow_down_black_48dp"
                            android:onClick="onChangeButton" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:textColor="#1565c0"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="erivativa"
                    android:textColor="#7986cb"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/numD"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:inputType="numberDecimal"
                    android:text="0.0"
                    android:textAlignment="center"
                    android:textColor="#64b5f6"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/upupD"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_arrow_upward_black_48dp"
                            android:onClick="onChangeButton" />

                        <ImageButton
                            android:id="@+id/upD"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_keyboard_arrow_up_black_48dp"
                            android:onClick="onChangeButton"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/downdownD"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_arrow_downward_black_48dp"
                            android:onClick="onChangeButton" />

                        <ImageButton
                            android:id="@+id/downD"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_keyboard_arrow_down_black_48dp"
                            android:onClick="onChangeButton" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V"
                    android:textColor="#fdd835"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="elocidad"
                    android:textColor="#d4e157"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/numVVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="left"/>
                <SeekBar
                    android:id="@+id/numVsb"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:progress="0"
                    android:max="255"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
